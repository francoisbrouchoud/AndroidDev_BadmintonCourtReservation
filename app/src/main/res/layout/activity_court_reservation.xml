<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        tools:context=".ui.reservations.CourtReservationActivity">

        <TextView
            android:id="@+id/tv_courtReservation_courtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="36dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_courtReservation_courtPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="24dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_courtReservation_courtName"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="#00FFFFFF"
            tools:layout_editor_absoluteY="81dp"
            tools:ignore="MissingConstraints">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_cr_date"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/hint_cr_date"
                android:inputType="date" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="#00FFFFFF"
            tools:layout_editor_absoluteY="148dp"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_cr_time"
                    android:layout_width="360dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:text="TextView" />

                <Spinner
                    android:id="@+id/sp_cr_time"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_weight="1" />
            </LinearLayout>
        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="#00FFFFFF"
            tools:layout_editor_absoluteY="237dp"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_cr_player"
                    android:layout_width="360dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:text="TextView" />

                <Spinner
                    android:id="@+id/sp_cr_player"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_weight="1" />
            </LinearLayout>
        </com.google.android.material.textfield.TextInputLayout>



        <Button
            android:id="@+id/bt_cr_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_editPlayerActivity_create" />



    </LinearLayout>

</ScrollView>
